<body>
    <script>
        let array = [-3, 10, 97, 100, 88, 68, 66, 86];
        let max = array[0];
        let index = 0;
        for (let i = 0; i < array.length; i++) {
            if (array[i] > max) {
                max = array[i];
                index = i;
            }
        }
        console.log(max);
        alert("Phần tử lớn nhất trong mảng array là: " + max + " ở vị trí thứ " + index);
    </script>
</body>

</html>
